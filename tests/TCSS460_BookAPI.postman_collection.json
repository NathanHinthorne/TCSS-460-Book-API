	"item": [
		{
			"name": "get all messages",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Response status should be 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"})\r",
							"\r",
							"pm.test(\"Response content type should be text/html\", () => {\r",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.include('text/html');\r",
							"});\r",
							"\r",
							"pm.test(\"Response body should contain a message in h1 tags\", () => {\r",
							"    pm.expect(pm.response.text()).to.include(\"<h1>\").and.to.include(\"</h1>\");\r",
							"});\r",
							"\r",
							"pm.test(\"Body should have the field entries\", () => {\r",
							"    pm.expect(pm.response.text()).to.include(\"entries\");\r",
							"}); "
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [],
				"body": {
					"mode": "raw",
